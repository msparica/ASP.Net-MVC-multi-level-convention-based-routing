<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-GLhlTQ8iRABdZLl6O3oVMWSktQOp6b7In1Zl3/Jr59b6EGGoI1aFkw7cmDA6j6gD" crossorigin="anonymous">

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js" integrity="sha384-w76AqPfDkMBDXo30jS1Sgez6pr3x5MlQ1ZAGC+nuZB+EYdgRZgiwxhTBTkF7CXvN" crossorigin="anonymous"></script>
    @Styles.Render("~/Content/css")
</head>
<body>
    <nav class="navbar navbar-expand-lg bg-body-tertiary">
        <div class="container-fluid">
            <span class="navbar-brand" href="#">Routing Test</span>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                    <li class="nav-item">@Html.RouteLink("Home", new { section = "Home", controller = "Index", action = "Index" }, new { Class = "nav-link active" })</li>
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                            Dashboards
                        </a>
                        <ul class="dropdown-menu">
                            <li>
                                <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                    Client Feedback
                                </a>
                                <ul class="dropdown-menu submenu">
                                    <li>@Html.RouteLink("Feedback Trends", new { section = "Dashboards", controller = "ClientFeedback", action = "FeedbackTrends" }, new { Class = "nav-link active" })</li>
                                    <li>@Html.RouteLink("Last Feedback", new { section = "Dashboards", controller = "ClientFeedback", action = "LastFeedback" }, new { Class = "nav-link active" })</li>
                                </ul>
                            </li>
                            <li>@Html.RouteLink("Vehicles", new { section = "Dashboards", controller = "Vehicles", action = "Index" }, new { Class = "nav-link active" })</li>
                            <li>@Html.RouteLink("Work Progress", new { section = "Dashboards", controller = "WorkProgress", action = "Index" }, new { Class = "nav-link active" })</li>
                        </ul>
                    </li>
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                            Reports
                        </a>
                        <ul class="dropdown-menu">
                            <li>
                                <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                    Client Feedback
                                </a>
                                <ul class="dropdown-menu submenu">
                                    <li>@Html.RouteLink("By Client", new { section = "Reports", controller = "ClientFeedback", action = "ByClient" }, new { Class = "nav-link active" })</li>
                                    <li>@Html.RouteLink("By Project", new { section = "Reports", controller = "ClientFeedback", action = "ByClient" }, new { Class = "nav-link active" })</li>
                                </ul>
                            </li>
                            <li>@Html.RouteLink("Vehicle Maintenance", new { section = "Reports", controller = "VehicleMaintenance", action = "Index" }, new { Class = "nav-link active" })</li>
                            <li>@Html.RouteLink("Work Summary", new { section = "Reports", controller = "WorkSummary", action = "Index" }, new { Class = "nav-link active" })</li>
                        </ul>
                    </li>
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                            Admin
                        </a>
                        <ul class="dropdown-menu">
                            <li>@Html.RouteLink("Clients", new { section = "Admin", controller = "Clients", action = "Index" }, new { Class = "nav-link active" })</li>
                            <li>@Html.RouteLink("Projects", new { section = "Admin", controller = "Projects", action = "Index" }, new { Class = "nav-link active" })</li>
                            <li>@Html.RouteLink("Vehicles", new { section = "Admin", controller = "Vehicles", action = "Index" }, new { Class = "nav-link active" })</li>
                        </ul>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    @RenderBody()

    @RenderSection("scripts", required: false)
</body>
</html>
